<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>Email List Application</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Email List Servlet -->
    <servlet>
        <servlet-name>EmailListServlet</servlet-name>
        <servlet-class>murach.email.EmailListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmailListServlet</servlet-name>
        <url-pattern>/emailList</url-pattern>
    </servlet-mapping>

    <!-- SQL Gateway Servlet -->
    <servlet>
        <servlet-name>SQLGatewayServlet</servlet-name>
        <servlet-class>murach.email.SQLGatewayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SQLGatewayServlet</servlet-name>
        <url-pattern>/sqlGateway</url-pattern>
    </servlet-mapping>

    <!-- User Admin Servlet -->
    <servlet>
        <servlet-name>UserAdminServlet</servlet-name>
        <servlet-class>murach.email.UserAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAdminServlet</servlet-name>
        <url-pattern>/userAdmin</url-pattern>
    </servlet-mapping>

</web-app>
